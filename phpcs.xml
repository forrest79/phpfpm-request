<?xml version="1.0"?>
<ruleset name="PhpFpmRequest">
	<rule ref="./vendor/forrest79/phpcs/Forrest79CodingStandard/ruleset.xml"/>

	<rule ref="SlevomatCodingStandard.Classes.RequireAbstractOrFinal.ClassNeitherAbstractNorFinal">
		<exclude-pattern>src/*</exclude-pattern>
	</rule>

	<!-- PHP 8.0 -->
	<rule ref="SlevomatCodingStandard.Exceptions.RequireNonCapturingCatch.NonCapturingCatchRequired">
		<exclude-pattern>tests/test-requests.php</exclude-pattern>
	</rule>

	<rule ref="SlevomatCodingStandard.Variables.DisallowSuperGlobalVariable.DisallowedSuperGlobalVariable">
		<exclude-pattern>tests/request-with-query.php</exclude-pattern>
	</rule>

	<rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
		<properties>
			<property name="rootNamespaces" type="array" value="
				src=>Forrest79\PhpFpmRequest,
			"/>
		</properties>
	</rule>
</ruleset>
